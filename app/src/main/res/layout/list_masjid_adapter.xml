<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ic_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/point" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nama_masjid"
        android:text="Masjid Jami AR - Raudhlah"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/ic_point"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lokasi_masjid"
        android:text="Sukabumi, Mayangan, Probolinggo"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/nama_masjid"
        android:layout_toRightOf="@+id/ic_point"/>

    <TextView
        android:id="@+id/jarak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lokasi_masjid"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ic_point"
        android:text="25 KM"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buka Lokasi"
        android:textSize="11sp"
        android:id="@+id/btn_buka_lokasi"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/lokasi_masjid"
        android:layout_toStartOf="@+id/btn_buka_rute"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        tools:ignore="SmallSp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buka Rute"
        android:textSize="11sp"
        android:id="@+id/btn_buka_rute"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lokasi_masjid"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        tools:ignore="SmallSp" />

</RelativeLayout>